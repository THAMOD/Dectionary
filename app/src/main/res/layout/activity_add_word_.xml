<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Views.AddWord_Activity">
<EditText
    android:hint="Word name"
    android:id="@+id/add_txt_word_name"
    android:layout_margin="10dp"
    android:maxLines="1"
    android:textAppearance="@style/TextAppearance.AppCompat.Large"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"/>

    <EditText
        android:hint="Word name"
        android:id="@+id/add_txt_meaning"
        android:layout_margin="10dp"
        android:maxLines="2"
        android:layout_below="@+id/add_txt_word_name"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:hint="Word name"
        android:id="@+id/add_txt_word_type"
        android:layout_margin="10dp"
        android:maxLines="1"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_width="match_parent"
        android:layout_below="@id/add_txt_meaning"
        android:layout_height="wrap_content"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_add_word"
        android:layout_below="@id/add_txt_word_type"
        android:layout_margin="10dp"
        android:layout_centerHorizontal="true"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:text="Save"/>

</RelativeLayout>